<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Single DayNight theme for the app -->
    <style name="Theme.SOME" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:colorError">@color/error</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Optional alias so either name works in manifest -->
    <style name="Theme.SOMEFitnessMethod" parent="Theme.SOME"/>
</resources>


